<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.subham.ledgerplus.MenuLedger">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select an account for ledger"
        android:id="@+id/textView4"
        android:textColor="@color/primary" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants"
        android:id="@+id/listViewLedger"
        android:layout_weight="1"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="40dp" />

    <at.markushi.ui.CircleButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_plus_white_36dp"
        app:cb_color="@color/primary_dark"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/addRecordLedger"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <at.markushi.ui.CircleButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_account_plus_white_36dp"
        app:cb_color="#009900"
        app:cb_pressedRingWidth="8dip"
        android:id="@+id/addUserLedger2"
        android:layout_above="@+id/addRecordLedger"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:tint="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/countUserLedger"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
